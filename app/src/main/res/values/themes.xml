<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->c

    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- Secondary brand color. I use them on buttons -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/androidStatusBarColor</item>
        <item name="android:colorEdgeEffect">@color/orange</item>
        <!-- SearchView Widget cursor color -->
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/androidListDivider</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.Go4Lunch.drawer" parent="Theme.Go4Lunch">
        <item name="colorSurface">@color/drawerSurface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="Theme.Go4Lunch.titleBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Go4Lunch.preferences" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- this works only when theme is set in Manifest or in Activity's onCreate() override -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/androidStatusBarColor</item>
        <item name="colorPrimary">@color/colorPrimary</item><!-- Scroll end indicator -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white_ish</item>
        <item name="android:tint">@color/white</item>
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="alertDialogTheme">@style/Theme.Go4Lunch.alertDialog</item>
    </style>

    <style name="Theme.Go4Lunch.alertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/drawerSurface</item>
        <item name="android:colorControlNormal">@color/white_ish</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="buttonBarButtonStyle">@style/Theme.Go4Lunch.button_style</item>
    </style>

    <style name="Theme.Go4Lunch.button_style">
        <item name="android:backgroundTint">@color/colorSurface</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
