<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- <PreferenceCategory app:title="@string/messages_header"> -->

    <SwitchPreference
        app:icon="@drawable/ic_baseline_restaurant_menu_24"
        app:key="@string/preferences_notif_key"
        app:summary="@string/preferences_notif_text"
        app:title="@string/preferences_notif_title"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:icon="@drawable/ic_baseline_group_24"
        app:key="@string/preferences_login_key"
        app:summary="@string/preferences_login_text"
        app:title="@string/preferences_login_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/preferences_theme_key_system"
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:icon="@drawable/ic_baseline_image_24"
        app:key="@string/preferences_theme_key"
        app:title="@string/preferences_theme_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/preferences_locale_key_system"
        app:entries="@array/locale_entries"
        app:entryValues="@array/locale_values"
        app:icon="@drawable/ic_baseline_public_24"
        app:key="@string/preferences_locale_key"
        app:title="@string/preferences_locale_title"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:icon="@drawable/ic_baseline_delete_24"
        app:key="@string/preferences_clear_cache_key"
        app:summary="@string/preferences_clear_cache_description"
        app:title="@string/preferences_clear_cache_caption"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>
