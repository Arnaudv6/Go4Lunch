<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- <PreferenceCategory app:title="@string/messages_header"> -->
    <Preference
        app:key="gps"
        app:summary="@string/preferences_gps_text"
        app:title="@string/preferences_gps_title"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:key="login"
        app:summary="@string/preferences_login_text"
        app:title="@string/preferences_login_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="system"
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:key="theme"
        app:title="@string/preferences_theme_title"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:key="clear_cache"
        app:summary="@string/preferences_clear_cache_description"
        app:title="@string/preferences_clear_cache_caption"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>